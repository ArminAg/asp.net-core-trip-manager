@model asp.net_core_trip_manager.Core.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <div class="col s12">
        <h3 class="header">Send us a Message</h3>
    </div>
    <form method="post" class="col s12">
        <div class="row">
            <div class="input-field col s12 m8">
                <i class="material-icons prefix">account_circle</i>
                <input asp-for="Name" id="name" type="text">
                <label asp-for="Name" for="name">Name</label>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m8">
                <i class="material-icons prefix">mail</i>
                <input asp-for="Email" id="email" type="email">
                <label asp-for="Email" for="email">Email</label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m8">
                <i class="material-icons prefix">mode_edit</i>
                <textarea asp-for="Message" id="message" class="materialize-textarea"></textarea>
                <label asp-for="Message" for="message">Message</label>
                <span asp-validation-for="Message"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <button class="btn waves-effect waves-light btn-large" type="submit" name="action">
                    Send
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @if (ViewBag.Message != null)
    {
        <script>
            Materialize.toast("@ViewBag.Message", 3000);
        </script>
    }
}
