<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>@ViewBag.Title | Trip Manager</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/lib/materialize/dist/css/materialize.min.css" media="screen,projection" />
    <link type="text/css" rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="top-nav">
            <div class="container">
                <div class="nav-wrapper">
                    <a class="page-title">@ViewBag.Title</a>
                </div>
            </div>
        </nav>
        <div class="container">
            <a href="#" data-activates="nav-mobile" class="button-collapse top-nav full hide-on-large-only"><i class="material-icons">menu</i></a>
        </div>
        <ul id="nav-mobile" class="side-nav fixed">
            <li>
                <div class="userView">
                    <div class="background">
                        <img src="~/img/background.png">
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="#!user"><img class="circle" src="~/img/profile.png" alt="profile"></a>
                        <a href="#!name"><span class="white-text name">@User.Identity.Name</span></a>
                    }
                    else
                    {
                        <a href="#!user"><img class="circle" src="~/img/logo.png" alt="logo"></a>
                        <a href="#!name"><span class="white-text name">Trip Manager</span></a>
                    }
                </div>
            </li>
            <li><a asp-controller="App" asp-action="Index" class="waves-effect waves-teal"><i class="material-icons">business</i>Home</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="App" asp-action="Trips" class="waves-effect waves-teal"><i class="material-icons">location_on</i>My Trips</a></li>
            }
            <li><a asp-controller="App" asp-action="About" class="waves-effect waves-teal"><i class="material-icons">subject</i>About</a></li>
            <li><a asp-controller="App" asp-action="Contact" class="waves-effect waves-teal"><i class="material-icons">phone</i>Contact</a></li>
            <li><div class="divider"></div></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="Auth" asp-action="Logout" class="waves-effect waves-teal"><i class="material-icons">lock</i>Logout</a></li>
            }
            else
            {
                <li><a asp-controller="Auth" asp-action="Register" class="waves-effect waves-teal"><i class="material-icons">verified_user</i>Register</a></li>
                <li><a asp-controller="Auth" asp-action="Login" class="waves-effect waves-teal"><i class="material-icons">lock</i>Login</a></li>
            }
        </ul>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="section col s12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <footer class="page-footer">
        <div class="footer-copyright">
            <div class="container">
                © @DateTime.Now.Year Trip Manager
            </div>
        </div>
    </footer>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/materialize/dist/js/materialize.min.js"></script>
    <environment names="Development">
        <script src="~/js/script.js"></script>
    </environment>
    <environment names="Production,Staging">
        <script src="~/lib/_app/script.js"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>